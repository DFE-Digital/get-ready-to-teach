<%= tag :meta, property: 'og:title', content: [yield(:page_title).presence, t('service.name')].compact.join(' - ') %>
<%= tag :meta, property: 'og:type', content: "website" %>
<%= tag :meta, property: 'og:image', content: asset_path('govuk-opengraph-image.png') %>
<%= tag :meta, property: 'og:url', content: request.original_url %>

<% if @front_matter && @front_matter.has_key?(:description) %>
  <%= tag :meta, property: 'og:description', content: @front_matter[:description] %>
<% end %>
