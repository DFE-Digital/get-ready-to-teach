<%= govuk_cookie_banner html_attributes: { data: { controller: "cookies", cookies_target: "banner" }, class: "hidden" } do |cb| %>
  <% cb.with_message(heading_text: "Cookies on this service") do |m| %>
    <% m.with_action do %>
      <%= govuk_button_link_to "Accept additional cookies", "#", data: { action: "click->cookies#accept:prevent" } %>
    <% end %>

    <% m.with_action do %>
      <%= govuk_button_link_to "Reject additional cookies", "#", data: { action: "click->cookies#reject:prevent" } %>
    <% end %>

    <% m.with_action do %>
      <%= govuk_link_to "Read the cookie policy", "#" %>
    <% end %>

    <p>We use some essential cookies to make this service work.</p>
    <p>Weâ€™d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
  <% end %>
<% end %>
