<div class="page-header">
  <div class="govuk-width-container">
    <%= govuk_phase_banner(tag: { text: "Beta" }) do %>This is a new service. Help us improve it and 
      <%= govuk_link_to("give your feedback by email", new_feedback_path) %>.
    <% end %>

    <%= render "shared/breadcrumbs" %>

    <div class="content-container">
      <div class="content">
        <h1 class="govuk-heading-xl"><%= @front_matter.dig(:page_header, :title) %></h1>
        <span class="govuk-caption-xl"><%= @front_matter.dig(:page_header, :description) %></span>
      </div>

      <% if @front_matter.dig(:page_header, :logo) %>
        <div class="image">
          <%= image_tag "teacherlogo.svg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
